# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://linguauser:linguapass@localhost:5432/linguaaccess
MONGODB_URL=mongodb://localhost:27017/linguaaccess

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT & Authentication
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRE=7d
BCRYPT_ROUNDS=10

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@linguaaccess.com

# ML Service Configuration
ML_SERVICE_URL=http://localhost:3003
ML_SERVICE_TIMEOUT=30000

# AWS S3 / Cloudflare R2 Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=linguaaccess-uploads

# Speech & Accessibility Services
GOOGLE_CLOUD_API_KEY=your-google-cloud-key
GOOGLE_SPEECH_TO_TEXT_PROJECT=your-gcp-project

# WebSocket Configuration
WEBSOCKET_PORT=3002
WEBSOCKET_HEALTH_CHECK_INTERVAL=30000

# Cors Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn
